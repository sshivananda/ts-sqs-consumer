{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "rootDir": "./",
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    ".eslintrc.js",
    "repl.ts",
    "src/*",
    "src/**/*",
    "src/**/**/*",
    "test/*",
    "test/**/*",
    "test/**/**/*",
    "test/**/**/**/*",
    "integration-test/*",
    "integration-test/**/*",
    "integration-test/**/**/*",
    "integration-test/**/**/**/*",
  ]
}
